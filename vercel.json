{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "server/src/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "client/dist/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}